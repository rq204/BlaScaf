@page "/login"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Authentication.Cookies
@attribute [AllowAnonymous]

<PageTitle>系统登录 - @BsConfig.AppName</PageTitle>
<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f5f5f5;
    }

    .login-card {
        width: 420px;
        padding: 40px 32px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .login-title {
        text-align: center;
        font-size: 26px;
        font-weight: 600;
        margin-bottom: 28px;
        color: #333;
    }

    .captcha-img {
        height: 36px;
        width: 100%;
        border-radius: 4px;
        object-fit: cover;
        cursor: pointer;
        border: 1px solid #ddd;
    }

    .ant-btn-primary {
        width: 100%;
    }
</style>
<script>
    window.bsLogin = async function (username, password, token, dotNetObj) {
        let dto = {
            username: username,
            password: password,
            token: token
        };

        let success = false;
        let message = "";

        try {
            let response = await fetch('/bsapi/login', {
                method: 'POST',
                credentials: 'include', // 关键：要能收到 Set-Cookie
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(dto)
            });

            if (response.ok) {
                success = true;
            } else if (response.status === 401) {
                message = "用户名或密码错误";
            } else {
                message = "登录失败";
            }
        } catch (err) {
            message = "网络错误：" + err.message;
        }

        if (dotNetObj && dotNetObj.invokeMethodAsync) {
            await dotNetObj.invokeMethodAsync("OnLoginResult", success, message);
        }
    }
</script>

<div class="login-container">
    <div class="login-card">
        <div class="login-title">@BsConfig.AppName</div>
        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
            <Input @bind-Value="loginModel.Username" Placeholder="用户名" PrefixIcon="user" Required="true" />
            <div style="height: 16px;"></div>
            <Input @bind-Value="loginModel.Password" Placeholder="密码" PrefixIcon="lock" Type=" InputType.Password" Required="true" />
            <div style="height: 16px;"></div>

            @if (this.fragment != null)
            {
                <GridRow Gutter="8">
                    <GridCol Span="16">
                        <Input @bind-Value="loginModel.Token" Placeholder="验证码" Required="true" />
                    </GridCol>
                    <GridCol Span="8">
                        @fragment
                    </GridCol>
                </GridRow>
            }

            <div style="height: 24px;"></div>
            <Button Type="ButtonType.Primary" HtmlType="submit" Loading="@isLoading">登录</Button>
        </EditForm>
    </div>
</div>

