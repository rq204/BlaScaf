@page "/login"
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager NavigationManager
@inject IHttpContextAccessor HttpContextAccessor
@attribute [AllowAnonymous]

<PageTitle>系统登录-@BsConfig.AppName</PageTitle>
<style>
    .login-container {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f5f5f5;
    }

    .login-card {
    width: 420px;
    padding: 40px 32px;
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .login-title {
    text-align: center;
    font-size: 26px;
    font-weight: 600;
    margin-bottom: 28px;
    color: #333;
    }

    .captcha-img {
    height: 36px;
    width: 100%;
    border-radius: 4px;
    object-fit: cover;
    cursor: pointer;
    border: 1px solid #ddd;
    }

    .ant-btn-primary {
    width: 100%;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="login-title">@BsConfig.AppName</div>
        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin" >
            <Input @bind-Value="loginModel.Username" Placeholder="用户名" PrefixIcon="user" Required="true" />
            <div style="height: 16px;"></div>
            <Input @bind-Value="loginModel.Password" Placeholder="密码" PrefixIcon="lock" Type=" InputType.Password" Required="true" />
            <div style="height: 16px;"></div>
            @* 
            <AntRow Gutter="8">
                <AntCol Span="16">
                    <AntInput @bind-Value="loginModel.Captcha" Placeholder="验证码" Required="true" />
                </AntCol>
                <AntCol Span="8">
                    <img src="@captchaImage" alt="验证码" class="captcha-img" @onclick="ReloadCaptcha" />
                </AntCol>
            </AntRow> *@

            <div style="height: 24px;"></div>
            <Button Type="ButtonType.Primary" HtmlType="submit" Loading="@isLoading">登录</Button>
        </EditForm>
    </div>
</div>

